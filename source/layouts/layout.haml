!!!
%html
  %head
    %title= current_page.data.title || "Guitar"
    = stylesheet_link_tag "all",'carousel'
    = javascript_include_tag "https://code.jquery.com/jquery-1.11.1.min.js"
    /%script(src='https://cdn.firebase.com/js/client/1.1.1/firebase.js')
    = javascript_include_tag  "all"
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %link(rel="shortcut icon" href="#{url_for('/img/logo.png')}") 

  %body
    = partial 'partials/nav' 
    - if content_for? :carousel
      = yield_content :carousel 
    - if current_page.data.container === false
      = yield
    - else
      .container= yield

